<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center mt-3">編輯記錄</h2>
      {{> message}}
      <form action="/records/{{item._id}}?_method=PUT" method="post">
        <div class="mb-3">
          <label for="name" class="mb-2">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Type the item name"
            value="{{item.name}}">
        </div>
        <div class="mb-3">
          <label for="date" class="mb-2">Date</label>
          <input type="date" id="date" name="date" class="form-control" value="{{item.date}}">
        </div>
        <div class="mb-3">
          <label for="categoryId" class="mb-2">Category</label>
          <div class="mb-3">
            <select class="form-select" name="categoryId" id="categoryId">
              {{#each catagories}}
              <option value="{{ this._id }}" {{#if this.selected}} selected {{/if}}>{{ this.name }}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="mb-3">
          <label for="amount" class="mb-2">Amount</label>
          <input type="number" id="amount" name="amount" class="form-control" min="0" value="{{item.amount}}">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-block">Save</button>
          <a class="btn btn-secondary" href="/">Back</a>
        </div>
      </form>
    </div>
  </div>
</div>